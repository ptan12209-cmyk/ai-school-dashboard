# ============================================
# AI School Dashboard Frontend - Environment Variables
# ============================================
# Copy this file to .env and update values for your environment
# For production, use .env.production

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Backend API URL (without /api suffix)
REACT_APP_API_URL=https://your-backend-api-url.com/api

# --------------------------------------------
# App Configuration
# --------------------------------------------
# App name and branding
REACT_APP_NAME=AI School Dashboard
REACT_APP_VERSION=1.0.0

# Environment
REACT_APP_ENV=production

# --------------------------------------------
# Feature Flags
# --------------------------------------------
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_ANALYTICS=true

# --------------------------------------------
# Third-party Services (Optional)
# --------------------------------------------
# Google Analytics (optional)
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
REACT_APP_SENTRY_DSN=https://your-sentry-dsn-here

# ============================================
# Development Environment Example
# ============================================
# Uncomment and use these values for local development:
#
# PORT=3000
# REACT_APP_API_URL=http://localhost:5000/api
# REACT_APP_ENV=development
# REACT_APP_ENABLE_AI_FEATURES=true

# ============================================
# Build Configuration
# ============================================
# These are automatically set by Create React App
# PUBLIC_URL=/
# BUILD_PATH=build

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit .env files with sensitive data to version control
# 2. Frontend environment variables are embedded in the build and publicly accessible
# 3. DO NOT store secrets or API keys in frontend .env files
# 4. Use REACT_APP_ prefix for all custom environment variables
# 5. Sensitive operations should always be done on the backend
