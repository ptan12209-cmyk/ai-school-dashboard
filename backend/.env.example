# ============================================
# AI School Dashboard - Environment Variables
# ============================================
# Copy this file to .env and update values for your environment
# For production, use .env.production

# --------------------------------------------
# Server Configuration
# --------------------------------------------
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=school_dashboard
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# --------------------------------------------
# Authentication & Security
# --------------------------------------------
# Generate secure JWT secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_minimum_32_characters_required
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Generate secure session secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_secure_session_secret

# Bcrypt salt rounds (10-12 recommended for production)
BCRYPT_ROUNDS=12

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Comma-separated list of allowed frontend origins
CORS_ORIGIN=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# AI & ML Services
# --------------------------------------------
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Python ML Service URL
AI_SERVICE_URL=https://your-ml-service-url.com

# --------------------------------------------
# Email Service (Optional)
# --------------------------------------------
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password
EMAIL_FROM=noreply@yourschool.com

# --------------------------------------------
# SMS Service (Optional - Twilio)
# --------------------------------------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/school-dashboard/app.log

# ============================================
# Development Environment Example
# ============================================
# Uncomment and use these values for local development:
#
# NODE_ENV=development
# PORT=5000
# HOST=localhost
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=school_dashboard
# DB_USER=postgres
# DB_PASSWORD=postgres
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001
# AI_SERVICE_URL=http://localhost:8000

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit .env files to version control
# 2. Use strong, randomly generated secrets for JWT and sessions
# 3. In production, store sensitive values in secure secret management systems
# 4. Rotate secrets periodically
# 5. Use different secrets for development and production
# 6. Enable SSL/TLS for database connections in production
# 7. Use environment-specific .env files (.env.production, .env.development)
